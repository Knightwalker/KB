<%- include("../layouts/header.ejs"); -%>

<main>
    <h1>Welcome to SoftUni Wiki!</h1>
    <section id="featured">
        <h2>Latests articles</h2>
        <% for (const article of articles) { %> 
          <article>
            <h3><%= article.title %> </h3>
            <p><%= article.shortContent %>&hellip;</p>
            <div class="controls">
                <a href="/articles/details/<%= article._id %> ">Read more</a>
            </div>
          </article>
        <% } %> 
    </section>
</main>

