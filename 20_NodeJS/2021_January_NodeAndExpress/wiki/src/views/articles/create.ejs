<%- include("../layouts/header.ejs"); -%>

<main>
    <h1>Welcome to SoftUni Wiki!</h1>
    <% if (typeof objRegisterErrors !== "undefined") { %>
    <section id="notifications">
        <% if (objRegisterErrors.modelValidationError !== "undefined") { %>
            <p><%= objRegisterErrors.modelValidationError %> </p>
        <% } %>
    </section>
    <% } %>
    <section>
        <h2>Create new article</h2>
        <div class="spacer">
            <form action="/articles/create" method="POST">
                <label for="title">Article title</label>
                <input id="title" class="title" type="text" name="title">
                <label for="content">Content</label>
                <textarea id="content" name="content"></textarea>
                <input type="submit" value="Submit">
            </form>
        </div>
    </section>
</main>

<%- include("../layouts/footer.ejs"); -%>